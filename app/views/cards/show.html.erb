<div>
  <%= render HeaderComponent.new(@card.title) do %>
    <div class="flex gap-3">
      <%= link_to "Edit", edit_card_path(@card), class: "btn-secondary" %>
      <%= button_to "Destroy", @card, method: :delete, class: "btn-secondary" %>
    </div>
  <% end %>

  <div class="py-6">
    <%= @card.body %>
  </div>

  <div>
    <h1 class="font-semibold text-lg">Tasks</h1>
    <%= render "todo" %> 
  </div>
  <div>
    <h1 class="font-semibold text-lg">Comments</h1>
    <%= render "quote" %>
  </div>

</div>
